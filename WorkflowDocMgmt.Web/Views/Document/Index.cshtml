@* Document/Index.cshtml *@
@model IEnumerable<WorkflowDocMgmt.Web.Models.Document>

@{
    ViewData["Title"] = "Document List";
}
<a class="btn btn-primary" href="/Document/Upload">Upload New Document</a>
<br />
<h2>Document List</h2>

<table class="table table-bordered table-striped" id="documentTable">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Current Stage</th>
            <th>Uploaded On</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Title</td>
                <td>@doc.Status</td>
                <td>@doc.CurrentStageName</td>
                <td>@doc.UploadedOn.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doc.DocumentId" class="btn btn-sm btn-primary">Update Stage</a>
                    <a asp-action="Download" asp-route-id="@doc.DocumentId" class="btn btn-sm btn-success">Download</a>
                    <a asp-action="Delete" asp-route-id="@doc.DocumentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#documentTable').DataTable();
        });
    </script>
}
