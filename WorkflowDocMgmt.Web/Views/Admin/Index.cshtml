@* Admin/Index.cshtml *@
@model List<WorkflowDocMgmt.Web.Models.Admin>

@{
    ViewBag.Title = "Admins List";
}

<h2>Admins</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Admin</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Admin ID</th>
            <th>Username</th>
            <th>Access Level</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.AdminId</td>
                <td>@admin.Username</td>
                <td>@admin.AccessLevel</td>
                <td>@admin.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
