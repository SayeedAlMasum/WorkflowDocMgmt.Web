@* Dashboard/Index.cshtml *@
@model List<WorkflowDocMgmt.Web.Models.Task>

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Assigned Tasks</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No pending tasks assigned to you.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task ID</th>
                <th>Document ID</th>
                <th>Workflow ID</th>
                <th>Status</th>
                <th>Step Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.TaskId</td>
                    <td>@task.DocumentId</td>
                    <td>@task.WorkflowId</td>
                    <td>@task.Status</td>
                    <td>@task.StepNumber</td>
                    <td>
                        <form method="post" asp-action="UpdateTaskStatus">
                            <input type="hidden" name="taskId" value="@task.TaskId" />
                            <button type="submit" name="action" value="Approved" class="btn btn-success btn-sm" @(task.Status != "Pending" ? "disabled" : "")>Approve</button>
                            <button type="submit" name="action" value="Rejected" class="btn btn-danger btn-sm" @(task.Status != "Pending" ? "disabled" : "")>Reject</button>

                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
